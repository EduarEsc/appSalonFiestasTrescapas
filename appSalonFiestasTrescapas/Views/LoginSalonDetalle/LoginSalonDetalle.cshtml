@using SharinganSolutions.EntityTresCapas
@model ERespuestaSalonDetList

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>LoginSalonDetalle</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.15.0/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
    <div style="text-align: center" class="mt-3">
        <u class="h2" style="color: greenyellow">PAGINA DEL DETALLE DE LOS SALONES.</u>
    </div>
    <div class="container">
        <div class="row">
            <div class=" col-12 text-end">
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#salondetallemodal">
                    <i class="bi-person-add"></i> Detalle
                </button>
            </div>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Clave</th>
                <th scope="col">Correo</th>
                <th scope="col">Telefono</th>
                <th scope="col">Calle</th>
                <th scope="col">Colonia</th>
                <th scope="col">Delegacion</th>
                <th scope="col">CPostal</th>
                <th scope="col">Referencias</th>
                <th scope="col">Entre Calles</th>
                <th scope="col">Salon</th>
                <th scope="col">Capacidad</th>
            </tr>
        </thead>
        <tbody>
               @foreach (var item in Model.listcDetalleSalones)
               {
                   <tr>
                       <td>@item.IdDetalleSalon</td>
                       <td>@item.Correo</td>
                       <td>@item.Telefono</td>
                       <td>@item.Calle</td>
                       <td>@item.Colonia</td>
                       <td>@item.Delegacion</td>
                       <td>@item.CPostal</td>
                       <td>@item.Referencias</td>
                       <td>@item.EntreCalles</td>
                       <td>@item.IdSalon</td>
                       <td>@item.Capacidad</td>
                       <td>
                           <a href="#" class="btn btn-warning btn-link-actualiza" data-userid="@item.IdDetalleSalon">
                               <i class="bi bi-pencil"></i> Actualizar
                           </a>
                       </td>
                   </tr>
               }
        </tbody>
    </table>
</body>
</html>
