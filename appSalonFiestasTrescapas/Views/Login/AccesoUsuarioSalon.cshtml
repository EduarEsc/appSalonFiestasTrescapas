
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login Acceso UsuarioSalon</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.15.0/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">Acceso UsuarioSalon</div>
                    <div class="card-body">

                        @using (Html.BeginForm("getAccesoUsuarioSalon", "Login", FormMethod.Post))
                        {
                            <div class="form-group">
                                <label for="IdUsuario">Id de Usuario:</label>
                                <input type="text" class="form-control" id="IdUsuario" name="IdUsuario" placeholder="Id Usuario" required>
                            </div>
                            <br />
                            <div class="form-group">
                                <label for="Contraseña">Password:</label>
                                <input type="password" class="form-control" id="Contraseña" name="Contraseña" placeholder="Password" required>
                            </div>
                            <br />
                            <button type="submit" id="btnAgregar" class="btn btn-primary">Iniciar Sesión</button>

                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

    <script>
        $(document).ready(function () {

            $('#NombreUsuario, #Contraseña').on('input', ValidacionAccesoUsuarioSalon);

            $('#AccesoUsuarioSalonForm').on('shown.bs.modal', ValidacionAccesoUsuarioSalon);
        });

        function ValidacionAccesoUsuarioSalon() {
            var formCompleto = $('#NombreUsuario').val().trim() !== '' &&
                $('#Contraseña').val().trim() !== '';

            $('#btnAccesoUsuarioSalon').prop('disabled', !formCompleto);
        }</script>



</body>
</html>
