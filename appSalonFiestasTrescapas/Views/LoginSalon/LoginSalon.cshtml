@using SharinganSolutions.EntityTresCapas
@model ERespuestaSalonList

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login Salon</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.15.0/font/bootstrap-icons.css" rel="stylesheet">
    @*<style>
        table{
            border: none;
            width: 100%;
            border-collapse:collapse;
        }
        td{
            padding: 5px 10px;
            text-align: center;
            border: 1px solid #999;
        }
    </style>*@
</head>
<body>
    <br />
    <div style="text-align: center; color:navy" ; class="mt-3">
        <h2>Salones</h2>
    </div>
    <br />
    <br />
    <div class="container">
        <div class="row">
            <div class="col-12 text-end">
                <button type="button" class="btn btn-primary" data-bs-toogle="modal" data-bs-target="#salonmodal">
                    <i class="bi-person-add"></i>AGREGAR
                </button>
            </div>
        </div>
    </div>
    <br />
    <br />
    <div class="container" mt-4>
        <div class="row">
            <div class="col-12">
                <table class="table table-bordered border-primary; table-info">
                    <thead>
                        <tr>
                            <th scope="col">Clave</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Contraseña</th>
                            <th scope="col">Funcion</th>
                            <th scope="col">Tipo Salon</th>
                            <th scope="col">Activo</th>
                            <th scope="col">Actualizar</th>
                            <th scope="col">Detalle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.listSalones)
                        {
                            <tr>
                                <td>@item.IdSalon</td>
                                <td>@item.NombreSalon</td>
                                <td>####</td>
                                <td>@item.IdTipoUsuario</td>
                                <td>@item.IdTipoSalon</td>
                                <td>@item.EsActivo</td>
                                <td>
                                    <a href="#" class="btn btn-warning btn-link-actualiza" data-userid="@item.IdSalon">
                                        <i class="bi bi-pencil"></i> Actualizar
                                    </a>
                                </td>
                                <td>
                                    <a href="#" class="btn btn-warning btn-link-actualiza" data-userid="@item.IdSalon">
                                        <i class="bi bi-pencil"></i> Detalle
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="modal fade" id="AgregarModal" tabindex="-1" aria-labelledby="AgregarModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="AgregarModalLabel">Agregar Salon</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    @using (Html.BeginForm("postSalon", "Login", FormMethod.Post))
                    {
                        <div class="form-group">
                            <label for="NombreSalon">Nombre Salon:</label>
                            <input type="text" class="form-control" id="NombreSalon" name="NombreSalon" placeholder="Nombre Salon" required>
                        </div>
                        <label for="Funcion">Funcion:</label>
                        <select class="form-select" id="Funcion" name="IdTipoUsuario" aria-label="Default select example" required>
                            <option selected>Selecciona la funcion</option>
                            @foreach (var item in @Model.listTipoUsuario)
                            {
                                <option value="@item.IdTipoUsuario">@item.Descripcion</option>
                            }
                        </select>
                        <label for="TipoSalonSelect">Tipo Salon:</label>
                        <select class="form-select" id="TipoSalonSelect" name="IdTipoSalon" aria-label="Default select example" required>
                            <option selected>Selecciona el tipo de  salon</option>
                            @foreach (var item in @Model.listTipoSalon)
                            {
                                <option value="@item.IdTipoSalon">@item.Descripcion</option>
                            }
                        </select>
                        <div class="form-group">
                            <label for="Contraseña">Password</label>
                            <input type="password" class="form-control" id="Contraseña" name="Contraseña" placeholder="Password" required>
                        </div>
                        <div>
                            <input type="checkbox" id="EsActivo" name="EsActivo" value="true">
                            <label for="EsActivo">Activo</label>
                        </div>
                        <button type="submit" id="btnAgregar" class="btn btn-primary" disabled>Agregar</button>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="actualizarModal" tabindex="-1" aria-labelledby="actualizarModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Actualizar Salon</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    @using (Html.BeginForm("putSalon", "Login", FormMethod.Post))
                    {
                        @Html.Hidden("IdSalon")
                        <div class="form-group">
                            <label for="NombreSalon">Nombre Salon:</label>
                            <input type="text" class="form-control" id="NombreSalon" name="NombreSalon" required>
                        </div>
                        <label for="Funcion">Funcion:</label>
                        <select class="form-select" id="FuncionUp" name="IdTipoUsuario" aria-label="Default select example" required>
                            <option selected>Selecciona la Funcion</option>
                            @foreach (var c in @Model.listTipoUsuario)
                            {
                                <option value="@c.IdTipoUsuario">@c.Descripcion</option>
                            }
                        </select>
                        <label for="TipoSalonUp">Tipo Salón:</label>
                        <select class="form-select" id="TiposalonUp" name="IdTipoSalon" aria-label="Default select example" required>
                            <option selected>Selecciona el tipo de salón</option>
                            @foreach (var l in @Model.listTipoSalon)
                            {
                                <option value="@l.IdTipoSalon" )>@l.Descripcion</option>
                            }
                        </select>
                        <div class="form-group">
                            <label for="Contraseña">Password</label>
                            <input type="password" class="form-control" id="ContraseñaUp" name="Contraseña" placeholder="Password" required>
                        </div>
                        <div>
                            <input type="checkbox" id="EsActivoUp" name="EsActivo" value="true">
                            <label for="EsActivo">Activo</label>
                        </div>
                        <button id="btnActualizar" type="submit" class="btn btn-primary" disabled>Actualizar</button>
                    }
                </div>
            </div>
        </div>
    </div>


</body>
</html>
