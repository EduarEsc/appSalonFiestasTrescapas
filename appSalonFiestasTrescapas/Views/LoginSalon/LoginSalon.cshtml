                        <button id="btnAgregar" type="submit" class="btn btn-primary">Actualizar</button>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade modal-dialog-scrollable" id="DetalleSalonModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="DetSalon" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="DetalleSalonModal" style="color:chocolate">Detalle del Salon</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">

                    @using (Html.BeginForm("postSalon", "LoginSalon", FormMethod.Post))
                    {
                        <div class="form-group">
                            <label for="CorreoSalon">Correo del Salon:</label>
                            <input type="text" class="form-control" id="CorreoSalon" name="Correo" readonly>
                        </div>
                        <br />
                        <div class="form-group">
                            <label for="TelefonoSalon">Telefono del Salon:</label>
                            <input type="text" class="form-control" id="TelefonoSalon" name="Telefono" readonly>
                        </div>
                        <br />
                        <div class="form-group">
                            <label for="CalleSalon">Calle del Salon:</label>
                            <input type="text" class="form-control" id="Calle" name="Calle" readonly>
                        </div>
                        <br />
                        <div class="form-group">
                            <label for="ColoniaSalon">Colonia del Salon:</label>
                            <input type="text" class="form-control" id="Colonia" name="Colonia" readonly>
                        </div>
                        <br />
                        <div class="form-group">
                            <label for="DelegacionSalon">Delegacion del Salon:</label>
                            <input type="text" class="form-control" id="Delegacion" name="Delegacion" readonly>
                        </div>
                        <br />
                        <div class="form-group">
                            <label for="CPSalon">Codigo Postal del Salon:</label>
                            <input type="text" class="form-control" id="CP" name="CPostal" readonly>
                        </div>
                        <br />
                        <div class="form-group">
                            <label for="Referencias">Referencias del Salon:</label>
                            <input type="text" class="form-control" id="Referencias" name="Referencias" readonly>
                        </div>
                        <br />
                        <div class="form-group">
                            <label for="EntreCalleSalon">Entre que Calles:</label>
                            <input type="text" class="form-control" id="EntreCalle" name="EntreCalles" readonly>
                        </div>
                        <br />
                        <label for="CapacidadSalonUp">Capacidad del Salon:</label>
                        <select class="form-select" id="CapacidadSalonUp" name="Capacidad" aria-label="Default select example" disabled="disabled">
                            <option readonly>Selecciona la capacidad del salon.</option>
                            @foreach (var c in @Model.listCapacidad)
                            {
                                <option value="@c.IdCapacidad" readonly>@c.Capacidad</option>
                            }
                        </select>
